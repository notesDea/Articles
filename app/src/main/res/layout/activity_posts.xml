<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_posts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.notesdea.articles.controller.PostsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_posts"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:popupTheme="@style/Theme.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar" />

    <TextView
        android:id="@+id/text_posts_title"
        android:layout_below="@id/toolbar_posts"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_posts"
        android:textSize="@dimen/textsize_posts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_posts_content"
        android:layout_margin="@dimen/margin_posts"
        android:layout_below="@id/text_posts_title"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</RelativeLayout>
