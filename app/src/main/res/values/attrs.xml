<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeToLoadLayout">
        <attr name="refresh_enabled" format="boolean" />
        <attr name="load_more_enabled" format="boolean" />

        <attr name="drag_ratio" format="float" />
        <attr name="refresh_trigger_offset" format="dimension" />
        <attr name="load_more_trigger_offset" format="dimension" />

        <!--默认状态到正在刷新的滚动时间（自动刷新）-->
        <attr name="default_to_refreshing_duration" format="integer" />
        <!--下拉刷新到默认状态的滚动时间-->
        <attr name="swiping_refresh_to_default_duration" format="integer" />
        <!--释放刷新到正在刷新的滚动时间-->
        <attr name="release_refresh_to_refreshing_duration" format="integer" />
        <!--正在刷新到默认状态的滚动时间-->
        <attr name="refreshing_to_default_duration" format="integer" />

        <!--默认状态到正在加载状态的滚动时间（自动加载）-->
        <attr name="default_to_loading_more_duration" format="integer" />
        <!--上拉加载回到默认状态的滚动时间-->
        <attr name="swiping_load_more_to_default_duration" format="integer" />
        <!--释放加载到正在加载状态滚动时间-->
        <attr name="release_load_more_to_loading_more_duration" format="integer" />
        <!--正在加载到默认状态滚动的时间-->
        <attr name="loading_more_to_default_duration" format="integer" />
    </declare-styleable>
</resources>